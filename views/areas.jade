extends layout

block content
  include ./layout/nav.jade

  - if (area)
    h2 #{area.name}
    - if (area.properties.length === 0)
      p No property listed in #{area.name}
    - each prop in area.properties
      li
        a(href="/properties/#{prop._id}/") #{prop.name}

  - if (areas)
    p List all areas 
    ul
    - each area in areas 
      li
        a(href="/areas/#{area.name}/") #{area.name} - #{area.properties.length} properties 
include ./layout/footer.jade
