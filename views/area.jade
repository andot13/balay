extends layout

block content
  include ./layout/account/account-nav.jade
  // include ./layout/nav.jade

  div.area__main--image
    img.img-responsive(src="/images/homepage-background.jpg")
  div.area__title-container
    div.container
      div.col-sm-9
        h2.area__main--title #{area.name}
        p Adipisicing corporis natus necessitatibus sed illo! Recusandae alias facilis fugiat laudantium temporibus. Sapiente minima dignissimos nam atque debitis. In dolore.
      div.col-sm-3
        h2 #{area.properties.length} Properties
  div.container.main--public
    div.col-sm-9  
      - if (area)
        - if (area.properties.length === 0)
          p No property listed in #{area.name}
        - each property in area.properties
          .card
            div.card__container
              div.card__image-container
                a.card__title(href="/properties/#{property._id}/") #{property.name} 
                img.card__image(src='/images/image-1.jpg', alt='Generic placeholder thumbnail')
              footer.card__footer
                div
                  span=property.bedroom
                  span bed
                  // i.flaticon-furniture117
                div
                  span=property.shower
                  span bath 
                  // i.flaticon-showers7
                div
                  span=property.bedroom
                  span sqmt 
                  // i.flaticon-home180
          // li
          //   a(href="/properties/#{prop._id}/") #{prop.name}

include ./layout/footer.jade
