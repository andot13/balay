extends layout

block content
  // include ./layout/nav.jade
  include ./layout/account/account-nav.jade
  .container-fluid
    .row
      include ./layout/account/account-sidebar.jade
      .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
        != messages()
        h1.page-header Dashboard 
        a.btn--account-primary(href="/account/properties/add") Add property
        .row.placeholders
          if(user.properties.length === 0)
            div.flash_info--empty-list
              p Looks like you haven't listed anything yet. 
              a(href="#") Add new property
          else
            -each property in user.properties 
              .card
                div.card__image-container
                  a.card__title(href="/properties/#{property._id}/") #{property.name} 
                  img.card__image(src='/images/image-1.jpg', alt='Generic placeholder thumbnail')
                footer.card__footer
                  div
                    span=property.bedroom
                    span bed
                    // i.flaticon-furniture117
                  div
                    span=property.shower
                    span bath 
                    // i.flaticon-showers7
                  div
                    span=property.bedroom
                    span sq meter 
                    // i.flaticon-home180
include ./layout/footer.jade
