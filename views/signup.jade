extends layout

block content
  include ./layout/nav.jade
  h2 Create an account
  != messages()
  div.container
    if errors
      ul
      each error, i in errors
        li.alert.alert-danger #{error.msg}
    form.form-horizontal(method='post' action='/signup')
      div.form-group
        label(for="email") Email:
        input(type="text", name="email", value="#{ email ? email: '' }", novalidate)
      div.form-group
        label(for="password") Password:
        input(type="password", name="password" novalidate )
      // div.form-group
      //   label(for="confirm-password") Confirm Password:
      //   input(type="password", name="confirm-password" novalidate)
      input(type="submit")
  p Already have an account?
    a(href="/login") Login
include ./layout/footer.jade
